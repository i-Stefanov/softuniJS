  <h1>Search</h1>

  <form class="search-form" action="/items/search" method="get">
    <input
      type="text"
      class="search-name"
      name="name"
      placeholder="Search Name..."
    />
    <input
      type="text"
      class="search-type"
      name="type"
      placeholder="Search Type..."
    />
