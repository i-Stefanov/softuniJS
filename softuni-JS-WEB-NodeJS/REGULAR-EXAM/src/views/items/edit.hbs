<section id="editPage">
  <form id="editForm" action="/items/edit" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{item.name}}" />

    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="{{item.type}}" />

    <label for="production">Year of Production:</label>
    <input
      type="number"
      id="production"
      name="production"
      value="{{item.production}}"
    />

    <label for="exploitation">Years of Exploitation:</label>
    <input
      type="number"
      id="exploitation"
      name="exploitation"
      value="{{item.exploitation}}"
    />

    <label for="damages">Damages:</label>
    <input type="text" id="damages" name="damages" value="{{item.damages}}" />

    <label for="image">Image:</label>
    <input type="text" id="image" name="image" value="{{item.image}}" />

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="{{item.price}}" />

    <label for="description">Description:</label>
    <input
      type="text"
      id="description"
      name="description"
      value="{{item.description}}"
    />

    <input type="submit" class="edit" value="Edit Offer" />
  </form>
</section>