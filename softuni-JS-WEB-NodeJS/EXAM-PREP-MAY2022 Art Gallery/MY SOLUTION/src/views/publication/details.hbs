<main>
  <section id="details-page">
    <h1>Details</h1>
    <article class="details-card">
      <article class="details-card-text">
        <h2>
          Title:<br />
          {{publicationDetails.title}}
        </h2>
        <h3>Author: {{publicationDetails.author.username}}</h3>
        <h3>Painting technique: {{publicationDetails.paintingTechnique}} </h3>
        <h3>Certificate of authenticity: {{publicationDetails.certificate}}</h3>

        <!-- If there is no registered user, do not display buttons-->
        <div class="buttons">
          {{#if user}}
            {{#if isAuthor}}
              <!-- Only for registered user and author of the publication -->
              <a
                href="/publications/{{publicationDetails._id}}/edit"
                class="btn-edit"
              >Edit</a>
              <a
                href="/publications/{{publicationDetails._id}}/delete"
                class="btn-delete"
              >Delete</a>
            {{else}}
              {{#if isSharedByUser}}
                <!-- logged in user who has already shared the publication-->
                <p class="shared-pub">You already shared this publication</p>
                <!-- logged in user who has not yet shared the publication-->
              {{else}}
                <a
                  href="/publications/{{publicationDetails._id}}/share"
                  class="btn-share"
                >Share publication</a>
              {{/if}}
            {{/if}}

          {{/if}}

        </div>
      </article>

      <article class="details-card-image">
        <img
          src="{{publicationDetails.artPicture}}"
          alt="{{publicationDetails.title}}"
        />
      </article>
    </article>
  </section>
</main>