<section id="catalog-section" class="spaced">

    <h1 class="item">Auctions</h1>

    <ul class="catalog cards">
        <li class="item">
            <header class="pad-med">
                <h2>{{title}}</h2>
            </header>

            <main class="align-center">

                <img class="img-thumb" src="{{imageUrl}}">

            </main>

            <footer class="align-center pad-med">
                <p>Current price: <strong>${{price}}</strong></p>
                <a class="action" href="/catalog/{{_id}}">See details</a>
            </footer>
        </li>

    </ul>
    <main class="item pad-large align-center">
        <p>
            Nothing has been listed yet. Be the first!
        </p>
        <div>
            <a class="action" href="/create">Publish Auction</a>
        </div>
    </main>

</section>