<section id="catalog-section">

    {{#with auction}}
    <h1 class="item">
        {{title}}
        {{#if isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/edit/{{_id}}">Edit</a>
            <a class="action pad-small f-left" href="/delete/{{_id}}">Delete</a>
        </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <main class="layout right large">

            <div class="col">

                <img src="{{imageUrl}}" class="img-large">

            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{price}}</strong>
                    </div>
                    {{#if isOwner}}
                    <div>
                        {{#if bidder}}
                        Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>
                        <a class="action pad-med cta" href="/close/{{_id}}">Close Auction</a>
                        {{else}}
                        No bids
                        {{/if}}
                    </div>
                    {{else}}
                    {{#if hasUser}}
                    {{#if canBid}}
                    <form class="vertical" method="post" action="/bid/{{_id}}">
                        <label><span>Bid amount</span><input type="number" name="bidAmount"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{else}}
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>

            </div>
        </main>

        <footer>Listed by {{ownerName}}</footer>
    </div>
    {{/with}}

</section>