<section id="create-section" class="">

    <h1 class="item">Edit Auction</h1>

    <main class="item padded align-center">
        {{#if errors}}
        <div class="errors">
            {{#each errors}}

            <p>{{this.msg}}</p>

            {{/each}}
        </div>
        {{/if}}

        <form class="layout left large" method="post" action="/edit/{{auction._id}}">

            <div class="col aligned">
                <label><span>Title</span><input type="text" name="title" value="{{auction.title}}"></label>
                <label>
                    <span>Category</span><select name="category">
                        <option value="estate">Real Estate</option>
                        <option value="vehicles">Vehicles</option>
                        <option value="furniture">Furniture</option>
                        <option value="electronics">Electronics</option>
                        <option value="other">Other</option>
                    </select>
                </label>
                <label><span>Image URL</span><input type="text" name="imageUrl" value="{{auction.imageUrl}}"></label>
                <label><span>Starting price</span><input type="number" name="price" value="{{auction.price}}" {{#if hasBids}}disabled="true"{{/if}}></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{auction.description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Update Listing">
                </div>
            </div>

        </form>

    </main>

</section>