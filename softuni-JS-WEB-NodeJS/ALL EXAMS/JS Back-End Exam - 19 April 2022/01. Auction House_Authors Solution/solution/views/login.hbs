<section id="login-section" class="narrow">

    <h1 class="item">Login</h1>

    <main class="item padded align-center">
        {{#if errors}}
        <div class="errors">
            {{#each errors}}

            <p>{{this.msg}}</p>

            {{/each}}
        </div>
        {{/if}}

        <form class="aligned" method="post" action="/login">

            <label><span>Email</span><input type="text" name="email"></label>
            <label><span>Password</span><input type="password" name="password"></label>

            <div class="align-center">
                <input class="action" type="submit" value="Sign In">
            </div>

        </form>

    </main>

</section>