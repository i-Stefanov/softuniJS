<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{name}}</h1>
                <h3 id="payment">Payment method: {{paymentMethod}}</h3>
                <p id="price"><span>Price: ${{price}}</span></p>
                <p id="description">{{description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                <div class="author">
                    <a href="/crypto/{{_id}}/edit" class="btn-edit">Edit</a>
                    <a href="/crypto/{{_id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else if user}}
                    {{#if isBought}}
                        <!-- Logged in user who has already buy this crypto-->
                         <p class="buy-message">You already bought the se crypto coins.</p>

                    {{else}}
                        <!-- Logged in user who has not yet buy this crypto-->
                        <a href="/crypto/{{_id}}/buy" class="btn-buy">Buy</a>
                    {{/if}}
                {{/if}}


            </div>
        </div>
    </section>
</main>